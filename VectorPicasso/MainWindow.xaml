<Window x:Class="VectorPicasso.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VectorPicasso"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
            <RadioButton Checked="RadioButton_Checked">Rechteck</RadioButton>
            <RadioButton Checked="RadioButton_Checked">Punkt</RadioButton>
            <Button Click="Speichern_Click">Speichern</Button>
            <Button Click="Laden_Click">Laden</Button>
            <Button Click="Speichern_XML_Click">Speichern XML</Button>
            <Button Click="Laden_XML_Click">Laden XML</Button>
        </StackPanel> 
        <Canvas Name="canvas" Background="Beige" MouseUp="Canvas_MouseUp">
            
        </Canvas>
    </DockPanel>
</Window>
